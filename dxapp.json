{
  "name": "mrcepid-bcfsplitter",
  "title": "BCFSplitter",
  "summary": "Splits a VCF into a BCF",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "input_vcfs",
      "label": "list of input vcf.gz file(s)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.txt"
      ],
      "help": "List of input VCF files from mrcepid-filterbcf."
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcfs",
      "label": "Output filtered vcf",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": "Output VCF(s)"
    }
  ],
  "access": {
    "network": [
      "*"
    ],
    "allProjects": "VIEW"
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "src/mrcepid-bcfsplitter.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": [
      {
        "name": "general_utilities",
        "package_manager": "git",
        "url": "https://github.com/mrcepid-rap/general_utilities.git",
        "build_commands": "git checkout logging_testing && python3 setup.py install"
      }
    ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem2_ssd1_v2_x64"
        }
      }
    }
  }
}
