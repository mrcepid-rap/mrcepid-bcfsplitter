{
  "name": "mrcepid-bcfsplitter",
  "title": "BCFSplitter",
  "summary": "Splits a VCF into a BCF",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "input_vcf",
      "label": "input vcf.gz file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": "Input VCF file."
    },
    {
      "name": "input_index",
      "label": "input vcf.gz.tbi file",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.vcf.gz.tbi"
      ],
      "help": "Input VCF file index."
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcfs",
      "label": "Output filtered vcf",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": "Output VCF(s)"
    }
  ],
  "access": {
    "network": [
      "*"
    ],
    "allProjects": "VIEW"
  },
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "src/mrcepid-bcfsplitter.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "execDepends": []
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x8"
        }
      }
    }
  },
  "authorizedUsers": [
    "org-adrestia"
  ]
}
