{
  "name": "mrcepid-bcfsplitter",
  "title": "BCFSplitter",
  "summary": "Splits a VCF into a BCF",
  "dxapi": "1.0.0",
  "version": "1.1.0",
  "inputSpec": [
    {
      "name": "input_vcfs",
      "label": "list of input vcf.gz file(s)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.txt"
      ],
      "help": "List of input VCF files to split."
    },
    {
      "name": "chunk_size",
      "label": "number of variants per split output .bcf",
      "class": "int",
      "optional": true,
      "default": 5000,
      "help": "The number of variants to include per-output BCF produced by this applet. Lines per-file cannot be smaller than [chunk_size] / 2."
    },
    {
      "name": "human_reference",
      "label": "Human reference genome",
      "class": "file",
      "optional": true,
      "help": "GRCh38 human reference genome",
      "default": {
        "$dnanexus_link": {
          "project": "project-Fx2x0fQJ06KfqV7Y3fFZq1jp",
          "id": "file-Fx2x270Jx0j17zkb3kbBf6q2"
        }
      }
    },
    {
      "name": "human_reference_index",
      "label": "Human reference genome .fai index",
      "class": "file",
      "optional": true,
      "help": "GRCh38 human reference genome .fai index",
      "default": {
        "$dnanexus_link": {
          "project": "project-Fx2x0fQJ06KfqV7Y3fFZq1jp",
          "id": "file-Fx2x21QJ06f47gV73kZPjkQQ"
        }
      }
    },
    {
      "name": "testing_script",
      "label": "Invoke the bcfsplitter test suite by providing a script compatible with the 'pytest' module.",
      "class": "file",
      "optional": true,
      "default": null,
      "help": "Invoke the bcfsplitter test suite by providing a script compatible with the 'pytest' module. DO NOT use this flag unless you know what you are doing!"
    },
    {
      "name": "testing_directory",
      "label": "Directory name containing test files.",
      "class": "string",
      "optional": true,
      "default": null,
      "help": "Directory name containing test files. DO NOT use this flag unless you know what you are doing!"
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcfs",
      "label": "Output filtered vcf",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.vcf.gz"
      ],
      "help": "Output VCF(s)"
    },
    {
      "name": "run_info",
      "label": "Split file information",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.tsv"
      ],
      "help": "Information about each processed file"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 12
      }
    },
    "interpreter": "python3",
    "file": "src/mrcepid-bcfsplitter.py",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0",
    "assetDepends": [],
    "execDepends": [
      {
        "name": "general_utilities",
        "package_manager": "git",
        "url":  "https://github.com/mrcepid-rap/general_utilities.git",
        "tag": "v1.2.2",
        "build_commands": "pip3 install ."
      }
    ]
  },
  "access": {
    "network": ["*"],
    "allProjects": "VIEW"
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x64"
        }
      }
    }
  }
}
